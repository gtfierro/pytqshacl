# https://shacl-playground.zazuko.com/
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix schema: <http://schema.org/> .

schema:Person
  a rdfs:Class, sh:NodeShape ;
  sh:property
    [
      sh:path schema:name ;
      sh:minCount 1 ;
      sh:maxCount 1 ;
    ],
    [
      sh:path schema:age ;
      sh:minCount 1 ;
      sh:minInclusive 18 ;
    ] ;
.


@prefix ex: <http://example.com/> .
ex:RectangleShape a sh:NodeShape ;
  sh:targetClass ex:Rectangle ;
  sh:rule [
    a sh:SPARQLRule ;
    sh:prefixes ( [ sh:prefix "ex" ; sh:namespace ex: ] ) ;
    sh:construct """
      PREFIX ex: <http://example.com/>
      CONSTRUCT {
        ?this ex:area ?area .
      } WHERE {
        ?this ex:width ?width ;
              ex:height ?height .
        BIND ((?width * ?height) as ?area)
      }
    """ ;
  ] .
